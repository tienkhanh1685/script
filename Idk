Title.TextSize = 16

--- UI Helper for Buttons
local function CreateButton(text, color, yPos, key)
    local btn = Instance.new("TextButton", Main)
    btn.Size = UDim2.new(0.75, 0, 0, 38)
    btn.Position = UDim2.new(0.05, 0, 0, yPos)
    btn.BackgroundColor3 = color
    btn.Text = text
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 13
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)

    local kb = Instance.new("TextLabel", btn)
    kb.Size = UDim2.new(0, 35, 1, 0)
    kb.Position = UDim2.new(1.1, 0, 0, 0)
    kb.BackgroundColor3 = Color3.fromRGB(35, 38, 50)
    kb.Text = key or ""
    kb.TextColor3 = Color3.new(1, 1, 1)
    kb.Font = Enum.Font.GothamBold
    Instance.new("UICorner", kb).CornerRadius = UDim.new(0, 4)
    return btn
end

-- Top Buttons (Matching Image)
local InstantBtn = CreateButton("‚ö° Instant Steal", Color3.fromRGB(60, 125, 255), 60, "R")
local FastBtn = CreateButton("üî• Fast Steal", Color3.fromRGB(160, 45, 255), 110, "E")

